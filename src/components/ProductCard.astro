---
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from '@/components/ui/card';
import { AspectRatio } from '@/components/ui/aspect-ratio';
import type { Product } from '@/types/Product';
import member from '@/data/member';
import MemberIcon from '@/components/MemberIcon';

interface Props {
  items: Product[];
  color?: 'white';
}
const { items, color } = Astro.props;
---

<div class="flex flex-wrap gap-[1.2rem]">
  {
    items.map(product => (
      <Card
        className="w-full md:w-[calc(calc(100%/2)-0.6rem)] bg-transparent group transition hover:opacity-70"
        key={product.name}
      >
        <a
          id={product.name}
          href={product.href ? product.href : `/product#${product.name}`}
          target={product.name}
          class={`block ${color === 'white' && 'text-white'}`}
        >
          <CardHeader>
            {product.image && (
              <div class="overflow-hidden rounded-md">
                <AspectRatio ratio={16 / 9}>
                  <img
                    src={product.image}
                    class="h-full w-full object-cover transition group-hover:scale-110"
                    alt=""
                  />
                </AspectRatio>
              </div>
            )}
          </CardHeader>
          <CardContent>
            <CardTitle>{product.name}</CardTitle>
          </CardContent>

          <CardFooter className="flex-col items-start">
            <CardDescription>
              <Fragment set:html={product.description} />
            </CardDescription>
            <div class="mt-6 flex flex-wrap gap-2">
              {product.participants?.map(participant => (
                <div class="flex flex-col items-center gap-1">
                  <MemberIcon
                    memberName={
                      member.find(m => m.name === participant)?.name || ''
                    }
                    client:load
                  />
                  <p class="text-xs">{participant}</p>
                </div>
              ))}
            </div>
          </CardFooter>
        </a>
      </Card>
    ))
  }
</div>
