---
import { Separator } from '@/components/ui/separator';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section
  class="ts-index-section pt-8 mx-[calc(((100vw-100%)/2)*-1)] px-[calc((100vw-100%)/2)] relative w-[100vw] h-[100svh] text-white"
>
  <h2 class="text-2xl md:text-4xl mb-6 text-white">
    <span class="ts-index-section-title">{title}</span>
    <Separator
      className="ts-index-section-separator mt-1 md:mt-4 bg-opacity-20 bg-white"
    />
  </h2>

  <div class="ts-index-section-slot">
    <slot />
  </div>

  <div
    class="ts-index-section-mask bg-primary absolute top-0 left-0 w-full h-full -z-10"
  >
  </div>
</section>

<script>
  import animation from './animation';
  animation();
</script>
