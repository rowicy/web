---
import Social from '@/components/Social.astro';

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<section
  id="hero"
  class="relative mx-[calc(((100vw-100%)/2)*-1)] flex h-[100vh] w-[100vw] flex-col items-center justify-center px-[calc((100vw-100%)/2)] py-24"
>
  <div
    id="hero-mask"
    class="absolute left-1/2 top-1/2 h-full w-full -translate-x-1/2 -translate-y-1/2 bg-primary"
  >
  </div>
  <h1 id="hero-title" class="text-3xl font-bold text-white md:text-5xl">
    {title}
  </h1>

  <div id="hero-social" class="absolute bottom-6 left-1/2 -translate-x-1/2">
    <Social />
  </div>
</section>

<script>
  import animation from './animation';
  animation();
</script>
