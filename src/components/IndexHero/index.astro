---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<section
  id="hero"
  class="w-[100vw] p-10 flex justify-center items-center mx-[calc(((100vw-100%)/2)*-1)] px-[calc((100vw-100%)/2)] h-[100svh] relative"
>
  <div
    id="hero-mask"
    class="bg-primary absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-full -z-10"
  >
  </div>
  <h1 id="hero-title" class="font-bold text-white text-3xl md:text-5xl">
    {title}
  </h1>
</section>

<script>
  import animation from './animation';
  animation();
</script>
