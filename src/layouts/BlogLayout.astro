---
import '@fontsource-variable/inter';
import '@fontsource-variable/noto-sans-jp';
import Header from '@/components/Header';
import Footer from '@/components/Footer.astro';
import siteInfo from '@/data/siteInfo';
import PageTitle from '@/components/PageTitle.astro';
import Section from '@/components/Section.astro';
import Breadcrumb from '@/components/Breadcrumb.astro';
import { Badge } from '@/components/ui/badge';
import '@/styles/globals.css';
import member from '@/data/member';
import MemberCard from '@/components/MemberCard.astro';
import type { CollectionEntry } from 'astro:content';
import { SEO } from 'astro-seo';
import Share from '@/components/Share.astro';
import Social from '@/components/Social.astro';
import JsonLdBlog from '@/components/JsonLdBlog.astro';

interface Props {
  blog: CollectionEntry<'blog'>;
}

const { blog } = Astro.props;
const author = member.find(m => m.name === blog.data.author);
const title = `${blog.data.title} | ${siteInfo.appName}`;
const description = blog.data.description || siteInfo.description;
const image = new URL(`/og/${blog.slug}.png`, Astro.url.origin).toString();
const authorX = author?.links?.find(l => l.name === 'X')?.id;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta name="author" content={`${siteInfo.appName} ${blog.data.author}`} />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" href="/favicon.svg" sizes="any" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <SEO
      charset="UTF-8"
      title={title}
      description={description}
      openGraph={{
        basic: {
          title,
          type: 'article',
          image,
        },
        image: {
          alt: title,
        },
        optional: {
          siteName: siteInfo.appName,
          description,
          locale: 'ja_JP',
        },
      }}
      twitter={{
        card: 'summary_large_image',
        site: siteInfo.x,
        title,
        description,
        image,
        imageAlt: title,
        creator: authorX || siteInfo.x,
      }}
    />
    <!-- Google Tag Manager -->
    <script
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=GTM-5FTGXC87"
      is:inline></script>
    <script type="text/partytown" is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'GTM-5FTGXC87');
    </script>
    <!-- End Google Tag Manager -->
    <JsonLdBlog
      title={blog.data.title}
      description={blog.data.description}
      url={Astro.url.toString()}
      author={blog.data.author}
      tags={blog.data.tags}
      image={image}
      datePublished={blog.data.pubDate}
    />
  </head>
  <body class="overflow-x-hidden">
    <Header client:load>
      <Social />
    </Header>
    <main class="container overflow-x-hidden md:overflow-x-visible">
      <PageTitle title={blog.data.title} />
      <Section>
        <div class="flex flex-col gap-4">
          <time datetime={String(blog.data.pubDate)}
            >{blog.data.pubDate.toString().slice(0, 10)}</time
          >
          <div class="flex flex-wrap gap-1">
            {
              blog.data.tags.map(tag => {
                return <Badge variant="outline">#{tag}</Badge>;
              })
            }
          </div>
        </div>

        <div class="blog-body">
          <slot />
        </div>
      </Section>

      {
        author && (
          <Section>
            <MemberCard items={[author]} layout="author" />
          </Section>
        )
      }

      <Section>
        <Share title={blog.data.title} url={`${Astro.url}`} />
      </Section>

      <Breadcrumb
        items={[{ name: 'Blog', href: '/blog' }, { name: blog.data.title }]}
      />
    </main>
    <Footer />
    <style is:global lang="scss">
      $space: 2rem;
      $space-sp: 1.6rem;
      $font-size: 2.25rem;
      $font-size-sp: 1.7rem;

      .blog-body {
        margin-bottom: $space;

        .toc {
          padding-top: $space-sp;
          padding-bottom: $space-sp;
          margin-top: $space-sp;
          margin-bottom: $space-sp;
          border: 2px solid #efefef;

          @media (min-width: 768px) {
            padding-top: $space;
            padding-bottom: $space;
            margin-top: $space;
            margin-bottom: $space;
          }

          ol {
            list-style: none;
            counter-reset: toc;
            padding-left: $space-sp;

            @media (min-width: 768px) {
              padding-left: $space;
            }

            ol {
              margin-top: 0;
            }

            li {
              counter-increment: toc;

              &::before {
                content: counters(toc, '.') ' ';
              }

              a {
                margin-left: calc($space / 5);
                text-decoration: none;
              }
            }
          }

          li + li,
          ol + ol,
          li + ol,
          ol + li,
          ol ol li {
            margin-top: calc($space / 5);
          }
        }

        h2 {
          font-size: $font-size-sp;

          @media (min-width: 768px) {
            font-size: $font-size;
          }
        }

        h3 {
          font-size: calc($font-size-sp * 0.9);

          @media (min-width: 768px) {
            font-size: calc($font-size * 0.9);
          }
        }

        h4 {
          font-size: calc($font-size-sp * 0.8);

          @media (min-width: 768px) {
            font-size: calc($font-size * 0.8);
          }
        }

        h5 {
          font-size: calc($font-size-sp * 0.7);

          @media (min-width: 768px) {
            font-size: calc($font-size * 0.7);
          }
        }

        h6 {
          font-size: calc($font-size-sp * 0.6);

          @media (min-width: 768px) {
            font-size: calc($font-size * 0.6);
          }
        }

        h2,
        h3,
        h4,
        h5,
        h6 {
          font-weight: 600;
          margin-top: calc($space-sp * 2);

          @media (min-width: 768px) {
            margin-top: calc($space * 2);
          }

          & + * {
            margin-top: calc($space-sp / 2);

            @media (min-width: 768px) {
              margin-top: calc($space / 2);
            }
          }
        }

        :not(h2, h3, h4, h5, h6) + :not(h2, h3, h4, h5, h6) {
          margin-top: calc($space-sp * 0.8);

          @media (min-width: 768px) {
            margin-top: calc($space * 0.8);
          }
        }

        a {
          text-decoration: underline;
          word-break: break-all;
        }

        pre {
          padding: calc($space / 2);
        }

        > ul,
        *:not(.toc) > ul {
          padding-left: 1rem;
          list-style: disc;
          list-style-position: outside;

          li {
            + li,
            > ul {
              margin-top: 0.5rem;
            }
          }
        }

        *:not(pre) > code {
          padding: 0.1em 0.3em;
          background-color: #e5e5e5;
          border-radius: 0.2em;
        }

        table {
          border-collapse: collapse;

          th,
          td {
            border: 1px solid #efefef;
            padding: calc($space / 3);

            &:empty {
              border: none;
              display: none;
            }
          }

          th {
            background-color: #efefef;
          }
        }
      }

      .remark-link-card-plus__container {
        @apply mb-4;
      }

      .remark-link-card-plus__card {
        @apply flex h-32 overflow-hidden rounded-xl border border-slate-300 bg-white !no-underline transition-colors hover:border-slate-500 hover:bg-slate-100;
      }

      .remark-link-card-plus__main {
        @apply flex flex-1 flex-col pl-4;
      }

      .remark-link-card-plus__content {
      }

      .remark-link-card-plus__title {
        @apply line-clamp-2 text-base font-semibold leading-6 text-gray-900 hover:!text-gray-900;
        @apply md:line-clamp-1 md:text-lg;
      }

      .remark-link-card-plus__description {
        @apply line-clamp-1 text-sm text-gray-500;
      }

      .remark-link-card-plus__meta {
        @apply hidden;
      }

      .remark-link-card-plus__favicon {
        @apply my-0 mr-1 h-4 w-4;
      }

      .remark-link-card-plus__url {
        @apply text-xs text-gray-600;
      }

      .remark-link-card-plus__thumbnail {
        @apply h-32 w-1/3 md:max-w-64;
      }

      .remark-link-card-plus__image {
        @apply my-0 h-full w-full object-cover;
      }
    </style>
    <div id="copy-toast" style="display:none;position:fixed;right:1.5rem;bottom:1.5rem;z-index:9999;min-width:120px;padding:0.5em 1em;background:rgba(30,41,59,0.95);color:#fff;border-radius:0.5em;font-size:0.95em;box-shadow:0 2px 8px rgba(0,0,0,0.08);text-align:center;pointer-events:none;">Link is copied.</div>
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.blog-body h2[id]').forEach(h2 => {
          h2.style.cursor = 'pointer';
          h2.addEventListener('click', () => {
            const url = `${location.origin}${location.pathname}#${h2.id}`;
            navigator.clipboard.writeText(url);
            const toast = document.getElementById('copy-toast');
            if (toast) {
              toast.style.display = 'block';
              toast.style.opacity = '1';
              setTimeout(() => {
                toast.style.opacity = '0';
                setTimeout(() => { toast.style.display = 'none'; }, 300);
              }, 1000);
            }
          });
        });
      });
    </script>
    <style is:global>
      #copy-toast {
        transition: opacity 0.3s;
      }
    </style>
  </body>
</html>
