---
import '@fontsource-variable/inter';
import Header from '@/components/Header';
import Footer from '@/components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
import siteInfo from '@/data/siteInfo';
interface Props {
  title?: string;
  description?: string;
  author?: string;
}

const { title, description, author } = Astro.props;
const gtmId = import.meta.env.GTM_ID;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description || siteInfo.description} />
    <meta name="author" content={author || siteInfo.appName} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title ? `${title} | ${siteInfo.appName}` : siteInfo.appName}</title>
    <ViewTransitions />
    <!-- Google Tag Manager -->
    <script
      type="text/partytown"
      src=`https://www.googletagmanager.com/gtag/js?id=${gtmId}`
      is:inline></script>
    <script type="text/partytown" is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', `${gtmId}`);
    </script>
    <!-- End Google Tag Manager -->
  </head>
  <body class="overflow-x-hidden">
    <Header client:idle />
    <main class="container">
      <slot />
    </main>
    <Footer />
  </body>
</html>
